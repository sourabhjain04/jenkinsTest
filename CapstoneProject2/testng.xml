<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Capstone Project 2 Test Suite">
	<test name="Smoke Tests">
		<groups>

			<run>

				<include name="Smoke" />
			</run>

		</groups>
		<classes>
			<class name="CapstoneProject2.LoginTest" />

			<class name="CapstoneProject2.LogoutTest" />
		</classes>
	</test>

	<test name="RegressionTests">
		<groups>

			<run>

				<include name="Regression" />
			</run>

		</groups>
		<classes>
			<class name="CapstoneProject2.LoginTest" />

			<class name="CapstoneProject2.PurchaseTest" />
			<class name="CapstoneProject2.DataDrivenLoginTest" />

		</classes>
	</test>
</suite>